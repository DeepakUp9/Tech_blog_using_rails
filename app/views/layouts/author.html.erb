<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:page_title) %> | TechBlog</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
     <script src="https://cdn.tiny.cloud/1/83kidgchc9pp85dkz5e2k7c88yjcu52bdz2tgdv6mpg03h2m/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
  </head>

  <body>
    <%= render 'layouts/navbar' %>
    <div class="container <%= controller_name %> <%= action_name %>">

      <% if flash.any? %>
        <% flash.keys.each do |key| %>
          <div class="alert alert-<%= key.to_s %> alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <%= flash[key] %>
          </div>
        <% end %>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>